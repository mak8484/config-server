          },
          {
            "label": "VC_FTGW_SET_LIGHTS",
            "value": "CC_FTGW_SET_LIGHTS"
          },
          {
            "label": "VC_FTGW_GIVE_WAY",
            "value": "CC_FTGW_GIVE_WAY"
          },
          {
            "label": "VC_FTGW_OTHER_GIVE_WAY",
            "value": "CC_FTGW_OTHER_GIVE_WAY"
          }
        ],
        "validators": [
          {
            "type": "REQUIRED"
          }
        ]
      },
      {
        "label": "common.au.moreDetails",
        "headerOption": "subsection-medium",
        "headerType": "h3",
        "id": "CC_COMMENT_TITLE",
        "type": "HEADLINE"
      },
      {
        "id": "claim.CC_COMMENT",
        "type": "TEXT_AREA",
        "label": "common.whatHappened",
        "maxLength": 1000,
        "hint": {
          "text": "common.au.min50chars",
          "links": []
        },
        "infoIcon": {
          "infoText": "common.au.incidentDescription.infoIcon.text",
          "componentToDisplay": "popover",
          "popOverTriggeredBy": "click",
          "popOverDirection": "bottom"
        },
        "validators": [
          {
            "type": "REQUIRED",
            "errorMessage": "common.validation.au.descriptionRequired"
          },
          {
            "type": "PATTERN",
            "value": "^[A-Za-z0-9\\s\\r\\n .,&!()?*#@%+$-\\/\\\\:;\\'‘’`\"“”]*$",
            "errorMessage": "common.validation.au.descriptionInvalidCharacters"
          },
          {
            "type": "MIN_LENGTH",
            "value": "50",
            "errorMessage": "common.validation.au.descriptionMinLength"
          },
          {
            "type": "MAX_LENGTH",
            "value": "1000",
            "errorMessage": "common.validation.au.descriptionMaxLength"
          }
        ]
      }
