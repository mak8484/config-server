            {
              "id": "CC_OPENING_DOOR",
              "label": "VC_OPENING_DOOR",
              "icon": "product-open-car-door"
            },
            {
              "id": "CC_OTHER",
              "label": "VC_OTHER",
              "icon": "product-other"
            }
          ],
          "multiSelection": false
        },
        "validators": [
          {
            "type": "REQUIRED",
            "errorMessage": "common.validation.required"
          }
        ]
      },
      {
        "id": "claim.CC_FTGW_TYPES",
        "label": "vehicle-collision.VC_TITLE2.label",
        "type": "RADIO",
        "showComponentConditions": [
          {
            "expression": "{$.claim.DAMAGE_SUB_TYPE} == 'CC_FAILURE_TO_GIVE_WAY'"
          }
        ],
        "options": [
          {
            "label": "VC_FTGW_ROUNDABOUT",
